generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model train {
  id    String  @unique @id @default(cuid())
  name String
  start_place  String
  end_place    String
  number_of_seats  String
  ticket_fare      Int       @default(0)
  schedule      DateTime
}

